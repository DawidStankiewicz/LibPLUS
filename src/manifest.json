{
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://librus.pl/ https://ssl.google-analytics.com/ https://www.googletagmanager.com/; object-src 'self'",
  "name": "LibPlus - rozszerzenie do Librusa",
  "description": "Szybki podgląd średniej oraz inne funkcje w dzienniku Librus",
  "author": "Dawid Stankiewicz",
  "short_name": "LibPLUS",
  "icons": {
    "128": "icon/icon_128.png",
    "48": "icon/icon_48.png",
    "16": "icon/icon_16.png"
  },
  "browser_action": {
    "default_icon": "icon/icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "page": "background.html",
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://synergia.librus.pl/przegladaj_oceny/uczen"
      ],
      "js": [
        "commons.js",
        "pagescript.js"
      ],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "https://*.librus.pl/",
    "storage"
  ]
}
