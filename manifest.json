{
  "manifest_version": 2,

  "name": "LibPLUS - podgląd średniej na Librusie",
  "description": "Podgląd średniej został wyłączony? To rozszerzenie rozwiąże problem!",
  "author": "Dawid Stankiewicz",
  "version": "2.2.0",
  "short_name": "LibPLUS",
  "icons": {"128": "icon/icon_128.png",
			"48": "icon/icon_48.png",
			"16": "icon/icon_16.png"},
  "browser_action": {
    "default_icon": "icon/icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://synergia.librus.pl/przegladaj_oceny/uczen"],
      "js": ["pagescript.min.js", "config.min.js", "jquery.js", "js-xlsx-master/dist/xlsx.core.min.js", "excelplus/excelPlus-2.4.1.min.js", "excelplus/sheetjs.all.min.js"],
      "css": ["css/libplusstyle.css"],
	  "run_at": "document_end"
    }
  ],
  "permissions": [
    "activeTab"
  ]
}